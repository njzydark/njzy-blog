    "next-mdx-remote": "^4.0.3",
    "next-themes": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "2.0.9",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/node": "^14.14.25",

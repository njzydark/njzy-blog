  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm sitemap && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
